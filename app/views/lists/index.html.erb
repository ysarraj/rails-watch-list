<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-white fw-bold">My WatchLists</h1>
    <%= link_to new_list_path, class: 'text-white fw-bold text-decoration-none' do %>
        <i class="fa-solid fa-plus"></i>
    <% end %>
  </div>

  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-4">
                <div class="card h-100 text-white card-hover" style="<% if list.photo.attached? %>background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url('<%= url_for(list.photo) %>'); background-size: cover; background-position: center; background-repeat: no-repeat;<% else %>background-color: rgba(0,0,0,0.3);<% end %>">
                  <div class="card-body">
                    <h5 class="card-title"><%= list.name %></h5>
              <%= pluralize(list.movies.count, 'movie') %>
            </p>
            <%= link_to "View list", list_path(list), class: "btn btn-outline-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>