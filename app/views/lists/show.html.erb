<div class="container">
  <h1><%= @list.name %></h1>
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <p class="card-text"><%= bookmark.movie.overview %></p>
            <p class="card-text"><%= bookmark.movie.rating %></p>
            <img src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %>" class="img-fluid">
             <%= link_to 'Delete', bookmark_path(bookmark), class: 'text-decoration-none text-gray', data: { turbo_method: :delete, turbo_confirm: 'Delete this movie from the list?' } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
  <%= link_to "Edit list", edit_list_path(@list), class: "btn btn-secondary" %>
  <%= link_to "Back to lists", lists_path, class: "btn btn-secondary" %>
</div>