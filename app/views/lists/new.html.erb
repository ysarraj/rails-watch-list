<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="mb-4 text-white">Create a new list</h1>
      
      <%= simple_form_for @list do |f| %>
        <div class="form-group">
          <%= f.input :name%>
          <%= f.input :photo, as: :file %>
        </div>
        
        <div class="d-flex gap-2 mt-4">
          <%= f.submit "Create list", class: 'btn btn-primary text-white' %>
          <%= link_to "Back to lists", lists_path, class: 'btn btn-outline-secondary text-white' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
